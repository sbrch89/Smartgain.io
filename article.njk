<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>{{ article.title }}</title>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <link rel="stylesheet" href="/static/style.css"/>
</head>
<body>
  <header><a href="/">← Home</a></header>
  {% if article.lang == "ar" %}
    <article dir="rtl">
  {% else %}
    <article>
  {% endif %}
      <h1>{{ article.title }}</h1>
      <p class="meta">{{ article.lang }} • {{ article.date.slice(0,10) }}</p>
      <div class="content">{{ article.content | safe }}</div>
    </article>
  <footer>SmartGain.io</footer>
</body>
</html>
